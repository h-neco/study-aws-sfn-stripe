{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./src/@types", "jest"],
    "outDir": "./dist"
  },
  "include": ["src/**/*", "tests/*test.ts"],
  "exclude": ["test"]
}
